<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_base_background"
              android:orientation="vertical">
    <ImageView android:id="@+id/dialog_record_iv_title"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_gravity="center"
               android:layout_weight="4"
               android:src="@drawable/dialog_record_tv_start"/>
    <ImageView android:id="@+id/dialog_record_iv_icon"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_gravity="center"
               android:layout_weight="3"
               android:src="@drawable/dialog_record_iv_start"/>

    <LinearLayout android:id="@+id/dialog_record_layout_start"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:visibility="visible">
        <ImageButton android:id="@+id/dialog_record_cancel"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_marginRight="20dp"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_but_cancel"/>
        <ImageButton android:id="@+id/dialog_record_sure"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="20dp"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_but_sure"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/dialog_record_layout_save"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_gravity="center"
                  android:visibility="gone"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
        <ImageButton android:id="@+id/dialog_record_no_save"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_record_but_no_save"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
        <ImageButton android:id="@+id/dialog_record_keep"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_record_but_keep"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
        <ImageButton android:id="@+id/dialog_record_save"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_record_but_save"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"/>
</LinearLayout>