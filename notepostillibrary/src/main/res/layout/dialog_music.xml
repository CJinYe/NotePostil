<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_music_backgrond"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="100"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="200"/>
        <ImageView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="115"
                   android:src="@drawable/dialog_music_tv_title"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="95"/>
        <ImageButton android:id="@+id/dialog_music_back_start"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_weight="85"
                     android:background="@null"
                     android:src="@drawable/selector_dialog_music_but_back"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="20"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="155"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="20"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="20"/>

        <ImageView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="145"
                   android:src="@drawable/dialog_music_icon"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="20"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="300"
                      android:orientation="vertical">

            <TextView android:id="@+id/dialog_music_tv_title"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="52"
                      android:gravity="center"
                      android:text="课堂录音"
                      android:textColor="#ffffff"
                      android:textSize="20sp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="50"
                          android:orientation="horizontal">
                <TextView android:id="@+id/dialog_music_seek_tv_progress"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_gravity="center"
                          android:text="0:00"
                          android:textColor="#ffffff"/>

                <SeekBar android:id="@+id/dialog_music_seek"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_weight="1"/>

                <TextView android:id="@+id/dialog_music_seek_tv_duration"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_gravity="center"
                          android:text="2:50"
                          android:textColor="#ffffff"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="52"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="25"/>

                <ImageButton android:id="@+id/dialog_music_stop"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="50"
                             android:background="@null"
                             android:scaleType="fitXY"
                             android:src="@drawable/selector_dialog_music_but_stop"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="50"/>

                <ImageButton android:id="@+id/dialog_music_start"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="50"
                             android:background="@null"
                             android:scaleType="fitXY"
                             android:src="@drawable/selector_dialog_music_but_pause"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="50"/>

                <ImageButton android:id="@+id/dialog_music_go_back"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="50"
                             android:background="@null"
                             android:scaleType="fitXY"
                             android:src="@drawable/selector_dialog_music_but_goback"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="25"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="40"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="30"/>
    </LinearLayout>


    <!--android:maxHeight="4.0dip"-->
    <!--android:progressDrawable="@drawable/seek_bar_background"-->
</LinearLayout>